<div class="container">
  <h1>Your visitation requests</h1>

  <% @my_visitations.reverse_each do |visitation| %>
    <div class="card-product">
      <div class="card-product-infos">
        <% if visitation.status == "Approve" %>
          <div class="flash flash-success alert alert-dismissible fade show" role="alert">
            <span><strong>Yay!</strong> ðŸŽ‰ You got good news from <%= visitation.breeder.name %>   </span>
            <a data-dismiss="alert" aria-label="Close">
              <i class="fas fa-times"></i>
            </a>
          </div>
          <h3><%= "Congratulations, your visitation request for #{visitation.breeder.name} got approved" %></h3>
          <h4><%= "You can contact the breeder through Email: #{visitation.breeder.email} Phone: #{visitation.breeder.phone_number}" %></h4>
        <% else %>
          <h2>Visitation for <%= visitation.breeder.name %> is <%= visitation.status %></h2>
        <% end %>
      </div>
    </div>
  <% end %>

  </br>
  <%= link_to "home page", root_path, class: "btn btn-dark popular" %>
</div>
