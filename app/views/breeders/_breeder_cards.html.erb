<div class="breeder-cards">
  <% @breeders.reverse_each do |breeder|%>
      <div class="card-breeder">
      <img src="<%= image_path 'breeder_pic.jpg' %>"/>
        <div class="card-breeder-infos">
          <div>
            <h2><%= link_to breeder.name, breeder_path(breeder.id), class: "breeder-name" %></h2>
            <p><%= breeder.about_us %> </p>
          </div>
        </div>
      </div>
  <% end %>
</div>
