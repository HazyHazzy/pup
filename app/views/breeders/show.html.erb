<div class="container">

  <h1><%= @breeder.name %></h1>

  <h2>About Us</h2>
  <%= @breeder.about_us %>

  <h3>Parents</h3>
  <% @breeder.parents.reverse_each do |parent|%>
    <h2><%= link_to parent.name, breeder_parent_path(@breeder.id, parent.id) %></h2>
  <% end %>

  <div class="row-container">
    <h3>Litters</h3>
    <div class="row">
      <%= render 'litter_cards' %>
    </div>
  </div>



  <%= link_to "See all breeders", breeders_path, class: "btn-secondary-pup" %>

</div>
