<div class="container">
  <h1>Make decision for this visitation</h1>

  <div>
    <h2>The Visitor</h2>
    <ul>Name: <%= @visitation.name %></ul>
    <ul>Home Address: <%= @visitation.home_address %></ul>
    <ul>Email Address: <%= @visitation.email_address %></ul>
    <ul>Contact Number: <%= @visitation.contact_number %></ul>
    <div id="more" class="fulltext">
      <ul>Occupation: <%= @visitation.occupation %></ul>
      <ul>Reference: <%= @visitation.reference %></ul>
      <ul>Personal Statement: <%= @visitation.screening_question %></ul>
    </div>
    <button text-expanded="false" text-controls="more" class="toggle-content" hidden><span class="text">Show More</span> <span class="visually-hidden">about this visitor</span></button>
  </div>

  <%= simple_form_for [@breeder, @visitation] do |v| %>
    <div >
      <%= v.input :status, label: "Make your decision", hint: "You can Approve, Reject or Pend", collection: %w[Pending Approve Reject] %>
    </div>
    <%= v.submit class: 'btn-primary-pup' %>
  <% end %>
</div>
