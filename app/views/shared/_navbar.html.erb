<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to root_path, class: "navbar-brand" do %>
    <%= image_tag "logo.png" %>
    <% end %>
  <ul class="navbar-nav mr-auto">
    <li class="nav-item active">
      <%= link_to "Breeds", breeds_path, class: "nav-link" %>
    </li>
    <li class="nav-item">
      <%= link_to "Breeders", breeders_path , class: "nav-link" %>
    </li>
    <% unless action_name == "home" %>
    <div class="search-navbar">
    <%= form_tag breeders_path, method: :get do %>
    <%= text_field_tag :query,
    params[:query],
    class: "form-control nav-control",
      placeholder: "Find a Breeder"
      %>
    <%= button_tag(type: 'submit', class: "btn btn-primary-pup") do %>
    <i class="fas fa-search"></i>
    <% end %>
    <% end %>
    </div>
    <% end %>
  </ul>



  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav ml-auto">
      <% if user_signed_in? %>
        <li class="nav-item">
          <%= link_to "My Brand", my_brand_path, class: "nav-link" %>
        </li>
         <li class="nav-item">
          <%= link_to "Visitation", my_requests_path, class: "nav-link" %>
        </li>
        <li class="nav-item dropdown">
          <%= image_tag "Dog.png", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "nav-link" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
