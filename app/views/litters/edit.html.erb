<div class="container">
  <h1>Edit <%= @litter.name %> Litter </h1>
  <div class="form-group col-7">
    <% def choose_stud (studs) %>
      <% selected_stud = [] %>
      <% studs.each do |stud|%>
        <% if stud.breeder_id == @litter.breeder_id %>
          <% selected_stud << stud %>
        <% end %>
      <% end %>
      <% selected_stud %>
    <% end %>

    <% def choose_mom (moms) %>
      <% selected_mom = [] %>
      <% moms.each do |mom|%>
        <% if mom.breeder_id == @litter.breeder_id %>
          <% selected_mom << mom %>
        <% end %>
      <% end %>
      <% selected_mom %>
    <% end %>

    <%= simple_form_for [@breeder, @litter] do |f| %>
        <%= f.input :name %>
        <%= f.input :birth_date %>
        <%= f.input :stud_id, collection: choose_stud(@studs) %>
        <%= f.input :mom_id, collection: choose_mom(@moms) %>
        <%= f.input :photo, as: :file %>
        <%= f.submit class: 'btn-primary-pup' %>
    <% end %>
  </div>
  <%= link_to "Back to #{@litter.name} litter", litter_path(@litter), class: "btn btn-dark popular" %>
</div>
