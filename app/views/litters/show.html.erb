<div class="container">

  <div class="header-sec">
    <div>
      <h1><%= @litter.name %> Litter</h1>
    </div>
    <div>
      <img src="<%= image_path 'litter_hp_pic.svg' %>" style="opacity: .9; height: 275px; width: 450px; object-fit: cover;" />
    </div>
  </div>

  <div>
    <p>Birth Date: <%= @litter.birth_date %></p>
    <br>

    <br>
    <h2>Parents</h2>
    <!-- Button trigger modal -->
    <button type="button" data-toggle="modal" data-target="#exampleModalLong">
      
    </button>
    <div class="row puppy-card d-flex justify-content-center">
      <div class="parent-card-litter">
        <% @litter.breeder.parents.reverse_each do |parent|%>
          <div class="card-parent">
              <%= cl_image_tag parent.photo.key, crop: :fill, class: 'show-img'%>
            <div class="card-parent-infos">
              <div>
                <h2 data-toggle="modal" data-target="#exampleModalLong"><%= link_to parent.name, breeder_parent_path(@litter.breeder.id, parent.id), class: "parent-name" %></h2>
                <p class="p-card"><%= parent.description %></p>
              </div>
              <p class="p-card"><%= parent.coat %></p>
            </div>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Modal -->
    <div class="modal fade" id="exampleModalLong" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLongTitle">Modal title</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            ...
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Back</button>
          </div>
        </div>
      </div>
    </div>
    <br><br>

    <h2>Puppies</h2>
    <div class="row puppy-card">
      <%= render 'puppies/puppies_card' %>
    </div>

    <br><br>
    <%= link_to "Edit #{@litter.name} Litter", edit_litter_path(@litter), class: "btn-secondary-pup" %>
    <%= link_to "Delete #{@litter.name} Litter", litter_path(@litter), method: "delete", class: "btn-secondary-pup" %>
    <%= link_to "#{@litter.name}'s puppies", breeder_litter_puppies_path(@litter.breeder, @litter), class: "btn-secondary-pup" %>
    <%= link_to "See all breeders", breeders_path, class: "btn-secondary-pup" %>
    <%= link_to "send visitation", new_breeder_visitation_path(@litter.breeder.id, litter_id: @litter.id), class: "btn-primary-pup shadow" %>
  </div>
  <div class="space"></div>
</div>

